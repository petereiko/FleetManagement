@{
    ViewData["Title"] = "Expenses";
    Layout = null;
}
@model FleetManagement.UI.Models.Dto.FuelExpenseDto

<!DOCTYPE html>


<html lang="en" dir="ltr" data-bs-theme="light" data-color-theme="Blue_Theme" data-layout="vertical">

<head>
    <!-- Required meta tags -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon icon-->
    <link rel="shortcut icon" type="image/png" href="~/assets/images/logos/favicon.png" />

    <!-- Core Css -->
    <link rel="stylesheet" href="~/assets/css/styles.css" />

</head>

<body>


    <div class="body-wrapper">
        <div class="container-fluid">
            <div class="font-weight-medium shadow-none position-relative overflow-hidden mb-7">
            </div>

            <div class="row justify-content-center">

                <div class="col-6">
                    <div class="card">
                        <div class="card-header text-bg-primary">
                            <h4 class="mb-0 text-white">Upload your expense details</h4>
                        </div>
                        <form asp-action="Expense" asp-controller="Vehicle">
                            <div>
                                <div class="card-body">
                                    <h4 class="card-title">Expense Info</h4>
                                    <div class="row pt-3">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label" asp-for="FillingStation">Filling Station</label>
                                                <input type="text" asp-for="FillingStation" class="form-control" placeholder="Name of station">

                                            </div>
                                        </div>

                                    </div>
                                    <div class="row pt-3">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label" asp-for="Amount">Amount</label>
                                                <input type="number" asp-for="Amount" class="form-control" placeholder="Amount of fuel bought">

                                            </div>
                                        </div>

                                    </div>
                                    <!--/row-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3 has-success">
                                                <label class="form-label" asp-for="State">State/City</label>
                                                <select class="form-select" asp-for="State">
                                                    <option value="">Abuja</option>
                                                    <option value="">Kaduna</option>
                                                    <option value="">Anambra</option>
                                                    <option value="">Enugu</option>
                                                    <option value="">Lagos</option>
                                                    <option value="">Ogun</option>
                                                </select>

                                            </div>
                                        </div>

                                        <!--/row-->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label" asp-for="LGA">Local Government Area</label>
                                                    <select asp-for="LGA" class="form-select" data-placeholder="Choose an LGA" tabindex="1">
                                                        <option value="Category 1">Category 1</option>
                                                        <option value="Category 2">Category 2</option>
                                                        <option value="Category 3">Category 5</option>
                                                        <option value="Category 4">Category 4</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label" asp-for="Date">Date of Purchase</label>
                                                <input asp-for="State" type="date" class="form-control">
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label asp-for="Receipt" class="form-label">Default file input example</label>
                                                <input class="form-control" type="file" asp-for="Receipt">
                                            </div>
                                        </div>
                                        
                                    </div>

                                </div>

                                <div class="form-actions">
                                    <div class="card-body border-top">
                                        <button type="submit" class="btn btn-primary">
                                            Save
                                        </button>
                                        <button type="button" class="btn bg-danger-subtle text-danger ms-6">
                                            Cancel
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
            
    </div>

</body>

</html>



