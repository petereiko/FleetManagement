@{
    ViewData["Title"] = "Expenses";
    Layout = null;
}
@model FleetManagement.UI.Models.Dto.FuelExpenseDto

<!DOCTYPE html>


<html lang="en" dir="ltr" data-bs-theme="light" data-color-theme="Blue_Theme" data-layout="vertical">

<head>
    <!-- Required meta tags -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon icon-->
    <link rel="shortcut icon" type="image/png" href="~/assets/images/logos/favicon.png" />

    <!-- Core Css -->
    <link rel="stylesheet" href="~/assets/css/styles.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">


</head>

<body>


    <div class="body-wrapper">
        <div class="container-fluid">
            <div class="font-weight-medium shadow-none position-relative overflow-hidden mb-7">
            </div>

            <div class="row justify-content-center">

                <div class="col-6">
                    <div class="card">
                        <div class="card-header text-bg-primary">
                            <h4 class="mb-0 text-white">Upload your expense details</h4>
                        </div>
                        <form asp-action="Expense" asp-controller="Vehicle" method="post">
                            <div>
                                <div class="card-body">
                                    <h4 class="card-title">Expense Info</h4>
                                    <div class="row pt-3">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label" asp-for="FillingStation">Filling Station</label>
                                                <input type="text" asp-for="FillingStation" class="form-control" placeholder="Name of station">

                                            </div>
                                        </div>

                                    </div>
                                    <div class="row pt-3">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label" asp-for="Amount">Amount</label>
                                                <input type="number" asp-for="Amount" class="form-control" placeholder="Amount of fuel bought">

                                            </div>
                                        </div>

                                    </div>
                                    <!--/row-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3 has-success">
                                                <label class="form-label" asp-for="State">State/City</label>
                                                <select class="form-select" asp-for="State">
                                                    <option value="Abuja">Abuja</option>
                                                    <option value="Kaduna">Kaduna</option>
                                                    <option value="Anambra">Anambra</option>
                                                    <option value="Enugu">Enugu</option>
                                                    <option value="Lagos">Lagos</option>
                                                    <option value="Ogun">Ogun</option>
                                                </select>

                                            </div>
                                        </div>

                                        <!--/row-->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label" asp-for="LGA">Local Government Area</label>
                                                    <select asp-for="LGA" class="form-select" data-placeholder="Choose an LGA" tabindex="1">
                                                        <option value="Eti-Osa">Eti-Osa</option>
                                                        <option value="Ijebu-Ode">Ijebu-Ode</option>
                                                        <option value="Nnewi">Nnewi</option>
                                                        <option value="Oba">Oba</option>
                                                        <option value="Garki">Garki</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label" asp-for="Date">Date of Purchase</label>
                                                <input asp-for="Date" type="text" id="datePicker" class="form-control">
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label asp-for="Receipt" class="form-label">Default file input example</label>
                                                <input class="form-control" type="file" asp-for="Receipt">
                                            </div>
                                        </div>
                                        
                                    </div>

                                </div>

                                <div class="form-actions">
                                    <div class="card-body border-top">
                                        <button type="submit" class="btn btn-primary">
                                            Save
                                        </button>
                                        <button type="button" class="btn bg-danger-subtle text-danger ms-6">
                                            Cancel
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
            
    </div>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            flatpickr("#datePicker", {
                enableTime: false, // Set to true if you want time selection
                dateFormat: "Y-m-d", // Format: YYYY-MM-DD
                altInput: true,
                altFormat: "F j, Y", // Displayed as: January 1, 2025
                weekNumbers: true,
                theme: "light", // Choose from light, dark, material_blue, etc.
            });
        });
    </script>


</body>

</html>



