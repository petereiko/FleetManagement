@using FleetManagement.UI.Models.Dto
@model List<FuelExpenseDto>



<div class="body-wrapper">
    <div class="container-fluid">
        <div class="font-weight-medium shadow-none position-relative overflow-hidden mb-7">
            <div class="card-body px-0">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="font-weight-medium fs-14 mb-0">Fuel datatable</h4>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a class="text-muted text-decoration-none" asp-action="Index" asp-controller="Home">
                                        Home
                                    </a>
                                </li>
                                <li class="breadcrumb-item text-muted" aria-current="page">Fuel Datatable</li>
                            </ol>
                        </nav>
                    </div>
                    <div>
                    </div>
                </div>
            </div>
        </div>


        <div class="datatables">
            <div class="card">
                <div class="card-body">
                    <div class="mb-2">
                        <h4 class="card-title">Fuel Expense List</h4>
                    </div>
                    <p class="card-subtitle mb-3">
                        Browse through the list of recorded fuel expenses. Use the search and filters to refine your results.
                    </p>

                    <a asp-controller="Vehicle" asp-action="Expense" asp-for="Expense" class="btn btn-primary mb-2">
                        <i class="ri-filter-line"></i> Add Expense
                    </a>

                    <div class="table-responsive">
                        <table class="table table-striped w-100 table-bordered text-nowrap" id="expenseTable">
                            <thead>
                                <tr>
                                    <th>Amount (₦)</th>
                                    <th>State</th>
                                    <th>LGA</th>
                                    <th>Filling Station</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var expense in Model)
                                {
                                    <tr>
                                        <td>₦@expense.Amount.ToString("N0")</td>
                                        <td>@expense.State</td>
                                        <td>@expense.LGA</td>
                                        <td>@expense.FillingStation</td>
                                        <td>@expense.Date.ToString("yyyy-MM-dd")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <!-- Pagination Controls -->
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                @if (ViewBag.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="ExpenseList" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                                    </li>
                                }

                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-action="ExpenseList" asp-route-page="@i">@i</a>
                                    </li>
                                }

                                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="ExpenseList" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
                                    </li>
                                }
                            </ul>
                        </nav>

                    </div>
                </div>
            </div>
        </div>

        
        
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script>
    $(document).ready(function () {
        var successMessage = '@TempData["SuccessMessage"]';
        if (successMessage) {
            Toastify({
                text: successMessage,
                duration: 3000,
                gravity: "top",
                position: "right",
                backgroundColor: "#00e606",
            }).showToast();
        }
    });
</script>